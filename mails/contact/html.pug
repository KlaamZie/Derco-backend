html
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    style(type='text/css').
        * {
            margin: 0;
            padding: 0;
        }
        table td {
            vertical-align: top;
        }
        body {
            background-color: #f6f6f6;
            padding: 15px;
        }
        img {
            display: block;
            max-height: 50px;
            margin: auto;
        }
        table {
            background-color: #f6f6f6;
            width: 100%;

            display: flex;
            justify-content: center;
        }
        tbody {
            background-color: #fff;
            display: grid;
            grid-template-columns: repeat(2, 1fr);

            margin: 15px auto;
            padding: 15px;
            border-radius: 5px;
        }

        tr {
            display: grid;
            grid-template-columns: fit-content(100%) 1fr;
            grid-gap: 10px;
            align-items: center;
        }

        tr:last-of-type {
            grid-column: 1/3;
            grid-template-columns: repeat(1, 1fr);
            grid-gap: 5px;
            padding-top: 5px;
        }
        h1, p {
            font-size: 16px;
        }
        h1 {
            font-weight: bold;
        }
    body
        img(src='https://api.derniere-cohorte.com/assets/_mails/contact/logo.png', alt='Logo Dernière Cohorte')
        table
            tbody
                tr
                    td
                        h1 Nom :
                    td
                        p #{name}
                tr
                    td
                        h1 Adresse mail :
                    td
                        p #{mail}
                tr
                    td
                        h1 Téléphone :
                    td
                        p #{phone}
                tr
                    td
                        h1 Type de requête :
                    td
                        p #{type}
                tr
                    td
                        h1 Message :
                    td
                        p #{message}